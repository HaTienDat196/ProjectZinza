= simple_form_for [:admin, @product] do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.input :name
    = f.input :price
    = f.input :number
    = f.input :image
    = f.association :category
  .form-actions
    = f.button :submit
