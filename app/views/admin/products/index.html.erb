<p id="notice"><%= notice %></p>
<h1>Bảng danh sách sản phẩm</h1>
<%= search_form_for @search, url: admin_products_path, class: "form-inline" do |f| %>
  <div class="form-group">
      <%= f.label :name_cont, 'Tên sản phẩm :' %>
        <%= f.text_field :name_cont, class: "form-control" %><br>
    </div>
    <%= f.submit 'Search', class: "btn btn-default" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Number</th>
      <th>Image</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.number %></td>
        <td><%= product.image %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show ', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<br>
<%= paginate @products, theme: 'twitter-bootstrap-3' %>
<table>
<tr style="color: red">
  <td><%= link_to 'Tạo sản phẩm mới', new_admin_product_path %></td>
</tr>
</table>
