%p#notice= notice
%h1 Users
%table.table
  %thead
    %tr
      %th Email
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= link_to 'Show', admin_user_path(user), class: "btn-sm btn-primary"
        %td= link_to 'Edit', edit_admin_user_path(user), class: "btn-sm btn-primary"
        %td= link_to 'Destroy', admin_user_path(user), class: "btn-sm btn-primary", method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_admin_user_path, class: "btn btn-success"
