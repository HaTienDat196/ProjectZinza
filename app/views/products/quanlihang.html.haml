%h1 Bảng danh sách sản phẩm
%table
  %thead
    %tr
      %th Name
      %th Price
      %th Number
      %th Image
      %th Category
      %th{:colspan => "3"}
  %tbody
    - @product.each do |product|
      %tr
        %td= product.name
        %td= product.price
        %td= product.number
        %td= product.image
        %td= product.category.name
        %td= link_to 'Show ', product_path(product)
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= paginate @product, theme: 'twitter-bootstrap-3'
%table
  %tr{:style => "color: red"}
    %td= link_to 'Tạo sản phẩm mới', new_product_path
