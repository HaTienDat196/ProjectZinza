%h1 Bảng danh sách sản phẩm
%table
  %thead
    %tr
      %th= t(".name_pr")
      %th= t(".price_pr")
      %th= t(".number_pr")
      %th= t(".image_pr")
      %th= t(".Category_pr")
      %th{:colspan => "3"}
  %tbody
    - @product.each do |product|
      %tr
        %td= product.name
        %td= product.price
        %td= product.number
        %td= product.image
        %td= product.category.name
        %td= link_to 'Show ', product_path(product)
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', quanlihang_path(product), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= paginate @product, theme: 'twitter-bootstrap-3'
%table
  %tr{:style => "color: red"}
    %td= link_to t(".create_newpr"), new_product_path
    %td= link_to t(".home_pr"), root_path

